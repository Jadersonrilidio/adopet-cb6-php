#!usr/bin/env php
<?php

$dsn = 'sqlite:' . dirname(__DIR__) . '/database/database.sqlite';

$conn = new PDO($dsn);

$createTableTutors = "CREATE TABLE IF NOT EXISTS tutors (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    email TEXT UNIQUE NOT NULL,
    password TEXT NOT NULL,
    picture TEXT,
    phone TEXT,
    city TEXT,
    about TEXT,
    created_at TEXT,
    updated_at TEXT
)";

$result = $conn->query($createTableTutors);

var_dump($result);
